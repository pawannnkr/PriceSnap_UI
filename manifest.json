{
  "manifest_version": 3,
  "name": "PriceSnap",
  "version": "1.0.0",
  "description": "Track Amazon product prices and get notified when prices drop",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.amazon.in/*",
    "https://amazon-price-tracker-465920637823.us-central1.run.app/*"
  ],
  "action": {
    "default_title": "Amazon Price Tracker",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*", "https://www.amazon.in/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
